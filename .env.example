# ============================================
# Claude Code Telegram Bot - Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Telegram Bot Configuration (REQUIRED)
# ============================================

# Bot token from @BotFather (required)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Restrict access to specific user IDs (recommended for security)
# Get your ID from @userinfobot
# Multiple IDs: comma-separated (e.g., 123456789,987654321)
# Leave empty to allow all users (NOT RECOMMENDED)
ALLOWED_USER_ID=your_telegram_user_id

# ============================================
# Database Configuration
# ============================================

# PostgreSQL database settings
DB_NAME=claude_code_bot
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Connection Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=10

# ============================================
# Claude CLI Configuration
# ============================================

# Path to Claude CLI binary
# npm/bun installation: /root/.bun/bin/claude or /usr/local/bin/claude
# Check with: which claude
CLAUDE_CLI_PATH=/root/.bun/bin/claude

# Command timeout in seconds (default: 300 = 5 minutes)
CLAUDE_TIMEOUT=300

# Maximum context messages to keep in memory
CLAUDE_MAX_CONTEXT_MESSAGES=10

# ============================================
# File Storage
# ============================================

# Directory for uploaded files
USER_FILES_DIR=/path/to/claude-code-bot/user_files

# Default working directory for Claude commands
DEFAULT_WORKING_DIR=/root

# ============================================
# Rate Limiting (optional)
# ============================================

# Maximum messages per window (0 = disabled)
RATE_LIMIT_MESSAGES=30

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
